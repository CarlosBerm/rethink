{
  "manifest_version": 3,
  "name": "Learning Coach (Google Docs)",
  "version": "0.1",
  "description": "Real-time AI learning companion for Google Docs",

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "http://localhost:8000/*" 
  ],

  "content_scripts": [
    {
      "matches": ["https://docs.google.com/document/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}