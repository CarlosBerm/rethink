{
  "manifest_version": 3,
  "name": "Rethink AI",
  "version": "0.1",
  "description": "Real-time AI learning companion for Google Docs",

  "icons": {
    "16":  "pictures/rethinkLogoBrain.png",
    "32":  "pictures/rethinkLogoBrain.png",
    "48":  "pictures/rethinkLogoBrain.png",
    "128": "pictures/rethinkLogoBrain.png"
  },

  "action": {
    "default_icon": {
      "16":  "pictures/rethinkLogoBrain.png",
      "32":  "pictures/rethinkLogoBrain.png",
      "48":  "pictures/rethinkLogoBrain.png",
      "128": "pictures/rethinkLogoBrain.png"
    },
    "default_title": "Rethink AI",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "http://64.181.214.188:3000/*",
    "https://docs.google.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://docs.google.com/document/*"],
      "js": [
        "content/config.js",
        "content/state.js",
        "content/ui.js",
        "content/text-extraction.js",
        "content/api.js",
        "content/analyzer.js",
        "content/init.js"
      ],
      "run_at": "document_idle"
    }
  ]
}